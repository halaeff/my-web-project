<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>web1</display-name>
	<jsp-config>
		<taglib>
			<taglib-uri>/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/c.tld</taglib-location>
		</taglib>
	</jsp-config>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>by.gsu.epamlab.controllers.LoginController</servlet-class>
		<init-param>
			<param-name>db</param-name>
			<param-value>db</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>registration</servlet-name>
		<servlet-class>by.gsu.epamlab.controllers.RegController</servlet-class>
		<init-param>
			<param-name>db</param-name>
			<param-value>db</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>by.gsu.epamlab.controllers.LogOutController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>task</servlet-name>
		<servlet-class>by.gsu.epamlab.controllers.TaskController</servlet-class>
		<init-param>
			<param-name>db</param-name>
			<param-value>db</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>task</servlet-name>
		<url-pattern>/task</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>